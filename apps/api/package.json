{
  "name": "@raven/api",
  "version": "1.0.0",
  "description": "Notify Chat Service Backend - Express + TypeScript + Mongoose",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "chat",
    "websocket",
    "express",
    "typescript",
    "mongoose",
    "mongodb",
    "redis"
  ],
  "author": "Notify Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@raven/shared": "workspace:*",
    "@raven/types": "workspace:*",
    "@raven/validators": "workspace:*",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mongoose": "^8.8.3",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@raven/eslint": "workspace:*",
    "@raven/jest": "workspace:*",
    "@raven/prettier": "workspace:*",
    "@raven/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",

    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
